<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment"
    android:orientation="vertical"
    >
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="@dimen/dim60"
       app:cardUseCompatPadding="true"
       app:cardElevation="2dp"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dim15"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/blue_circle"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dim10"
            android:layout_height="@dimen/dim10"
            android:id="@+id/profile_image1"
            android:src="@drawable/blue_circle"
            android:layout_gravity="right|top"
            android:layout_marginTop="@dimen/dim3"
            android:layout_marginRight="@dimen/dim3"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            />
    </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Home"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dim20"
            android:gravity="center"
            />
    </RelativeLayout>
   </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dim5"
        android:layout_marginBottom="@dimen/dim48"
        android:id="@+id/recyclerView_home"

        />


</LinearLayout>