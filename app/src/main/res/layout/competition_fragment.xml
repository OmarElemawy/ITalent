<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim60"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_back_button"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginRight="@dimen/dim10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="COMPETTION"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dim10"
                android:gravity="center"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dim10"
        android:paddingLeft="@dimen/dim10">
        <Button
            android:layout_width="@dimen/dim100"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dim10"
            android:background="@drawable/button_disign"
            android:textColor="#FFF"
            android:text="Singing"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="@dimen/dim100"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_design"
            android:text="Drawing"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/dim15"
            android:layout_marginTop="@dimen/dim10"/>
        <Button
            android:layout_width="@dimen/dim100"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_design"
            android:text="Quran"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="@dimen/dim15"
            android:layout_marginTop="@dimen/dim10"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dim5"
        android:layout_marginBottom="@dimen/dim48"
        android:id="@+id/recyclerView_competition"
        />
</LinearLayout>