<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

       <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim60"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Profile"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dim10"
                        android:gravity="center"
                        />
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentTop="true"
                       android:src="@drawable/ic_settings"
                       android:layout_marginRight="@dimen/dim25"
                       />
                </RelativeLayout>
                </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dim120"
            android:layout_height="@dimen/dim120"
            android:layout_gravity="center"
            android:src="@drawable/blue_circle"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginTop="@dimen/dim30"
            app:civ_border_width="0dp"
            android:layout_marginBottom="@dimen/dim30"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginTop="@dimen/dim30"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dim15"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#001"
                android:layout_marginTop="@dimen/dim20"
                android:text="ahmed mos3ad@gmail.com"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim10">
                <Button
                    android:layout_width="@dimen/dim100"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dim10"
                    android:background="@drawable/button_disign"
                    android:textColor="#FFF"
                    android:text="Follow"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="@dimen/dim100"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_design"
                    android:text="Message"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim10"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dim10">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Posts"
            android:layout_marginBottom="@dimen/dim10"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#B4B4B4"
            android:text="120"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim20"
        android:id="@+id/followers_id">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:text="Followers"
            android:layout_marginBottom="@dimen/dim10"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#B4B4B4"
            android:text="120"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/following_id"
        android:layout_margin="@dimen/dim20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:text="Following"
            android:layout_marginBottom="@dimen/dim10"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#B4B4B4"
            android:text="120"
            android:textSize="18sp"/>
    </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dim5"
        android:layout_marginBottom="@dimen/dim48"
        android:id="@+id/recyclerView_profile"

        />
</LinearLayout>