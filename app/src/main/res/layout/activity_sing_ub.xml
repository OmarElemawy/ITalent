<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUb"
    android:orientation="vertical"
    android:paddingTop="@dimen/dim15"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim48"
        android:paddingLeft="@dimen/dim30">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_button"
            android:layout_gravity="center"
            android:id="@+id/back_signIn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim100"
            />

    </LinearLayout>

    <EditText
        android:layout_width="@dimen/dim280"
        android:layout_height="@dimen/dim48"
        android:background="@drawable/edit_text_design"
        android:layout_marginTop="@dimen/dim30"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dim5"
        android:hint="Name"
        android:id="@+id/user_signUp"
        android:drawablePadding="@dimen/dim5"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_person_drawable_left"
        />
    <EditText
        android:layout_width="@dimen/dim280"
        android:layout_height="@dimen/dim48"
        android:background="@drawable/edit_text_design"
        android:layout_marginTop="@dimen/dim15"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dim5"
        android:hint="Email"
        android:id="@+id/email_signUp"
        android:drawablePadding="@dimen/dim5"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        />

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="@dimen/dim280"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dim10"
        app:passwordToggleEnabled="true"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/edit_text_design"
            android:id="@+id/pass_signUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="password"
            android:paddingRight="@dimen/dim5"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dim15"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/dim280"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dim10"
        app:passwordToggleEnabled="true"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/edit_text_design"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm password"
            android:paddingRight="@dimen/dim5"
            android:layout_gravity="center"
            android:id="@+id/co_pass_signUp"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dim15"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="@dimen/dim280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim15"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dim5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign as"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/dim10"
            android:textSize="20sp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_radio"
            android:layout_marginLeft="@dimen/dim10"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:text="talent"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginRight="@dimen/dim5"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/colorPrimary"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="fan"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:onClick="signUp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim15"
        android:background="@drawable/button_disign"
        android:layout_width="@dimen/dim280"
        android:text="Sing Up"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_height="@dimen/dim48"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim10"
        android:text="OR"
        android:textColor="#B4B4B4"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <ImageView
          android:layout_width="@dimen/dim50"
          android:layout_height="@dimen/dim50"
          android:src="@drawable/facebook"
          android:layout_marginRight="@dimen/dim15"/>
        <ImageView
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:src="@drawable/twitter"/>
    </LinearLayout>
</LinearLayout>