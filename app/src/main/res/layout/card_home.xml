<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dim5"
    app:cardCornerRadius="@dimen/dim10"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim5"
        android:paddingRight="@dimen/dim5">

        <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

            <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/user_image_card_home"
        android:src="@drawable/blue_circle"
        android:layout_marginTop="@dimen/dim10"
        android:layout_marginLeft="@dimen/dim10"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0.1dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim60"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim15"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dim15"
            android:text="Omar Elemawy"
            android:id="@+id/user_name_home"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="Omar Elemawy"
            android:id="@+id/time_post"
            android:textSize="13sp"
            />
        <ImageView
            android:id="@+id/menu_button_home"
            android:layout_gravity="top|right"
            android:layout_width="@dimen/dim30"
            android:layout_marginTop="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
           android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu"
            android:layout_height="@dimen/dim25" />
    </RelativeLayout>

</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dim15"
            android:layout_marginLeft="@dimen/dim15"
            android:layout_marginRight="@dimen/dim10"
            android:paddingLeft="@dimen/dim15"
            android:text="Omar Elemawy"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim200"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/dim5"
            app:cardCornerRadius="@dimen/dim10"
            android:background="#fff"
            android:id="@+id/card_home"
            >

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/video_home"/>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dim15"
                android:src="@drawable/ic_favorite"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dim48"
                android:src="@drawable/ic_comment"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dim48"
                android:src="@drawable/ic_share"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>